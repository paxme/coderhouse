<div class="block text-center bg-gray-50 my-auto h-screen">
  <!-- This example requires Tailwind CSS v2.0+ -->
  <div class="bg-indigo-600">
    <div class="max-w-7xl mx-auto py-3 px-3 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between flex-wrap">
        <div class="w-0 flex-1 flex items-center">
          <span class="flex p-2 rounded-lg bg-indigo-800">
            <!-- Heroicon name: outline/speakerphone -->
            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
            </svg>
          </span>
          <p class="ml-3 font-medium text-white truncate">
            <span class="md:hidden">
              We announced chat!
            </span>
            <span class="hidden md:inline">
              Big news! We're excited to announce chat.
            </span>
          </p>
        </div>
        <div class="order-3 mt-2 flex-shrink-0 w-full sm:order-2 sm:mt-0 sm:w-auto">
          <a href="/chat" class="flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-indigo-600 bg-white hover:bg-indigo-50">
            Learn more
          </a>
        </div>
      </div>
    </div>
  </div>
  <h1 class="p-2 text-5xl font-sans font-bold">
    Register new
    <span class="text-purple-400">Product</span>
    <p class="inline-block animate-bounce">ðŸ§ƒ</p>
  </h1>
  <form
    class="inline-block mt-2 py-4 px-16 bg-blue-200 rounded-xl w-3/4 h-1/2 shadow-lg"
    onsubmit="return sendProduct(event)"
  >
    <div class="block">
      <label for="title" class="text-lg mr-1 sm:mr-6 font-medium">title:
      </label>
      <input id="title" name="title" type="text" class="rounded px-2" />
    </div>
    <div class="block mt-8">
      <label for="price" class="text-lg mr-1 sm:mr-6 font-medium">price:
      </label>
      <input id="price" name="price" type="number" class="rounded px-2" />
    </div>
    <div class="block mt-8">
      <label for="thumbnail" class="text-lg mr-1 sm:mr-6 font-medium">thumbnail:
      </label>
      <input id="thumbnail" name="thumbnail" type="text" class="rounded w-36 sm:w-48 px-2" />
    </div>
    <button
      type="submit"
      class="rounded-xl bg-purple-400 text-white hover:bg-red-400 py-2 px-4 mt-10 w-3/4 sm:w-1/3"
    >
      Send
    </button>
  </form>
    <section id="productos" class="block text-center bg-gray-50 my-auto h-screen mt-5">
      <h2 class="p-2 text-5xl font-sans font-bold mt-4 text-purple-400">Productos</h2>
  <div id="productGrid" class="container container max-w-xl m-auto flex flex-wrap flex-col md:flex-row items-center justify-start">
  {{#if products.length}}
    {{#each products}}
   <div class="w-full lg:w-1/2 p-5">
    <div class="flex flex-col lg:flex-row rounded overflow-hidden h-auto lg:h-32 border shadow shadow-lg">
      <img class="block h-auto w-full lg:w-24 flex-none bg-cover h-24 rounded-full" src={{this.thumbnail}}>
      <div class="bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
        <div class="text-black font-bold text-xl mb-1 leading-tight">{{this.title}}</div>
        <p class="text-grey-darker text-base">${{this.price}}</p>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
    <div class="block p-10 text-center m-auto">
        <h2>No hay productos :(</h2>
    </div>
  {{/if}}
  </div>
  </section>
</div>
<script src="./index.js"></script>